<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/blog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="我是标题"
        android:textSize="15sp"
        android:textColor="#4D4D4D"
        android:layout_weight="1"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/blog_author_image"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_load_error"/>

        <TextView
            android:id="@+id/blog_author_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="杨小后"
            android:textSize="13sp"
            android:textColor="@color/color_primary"
            android:layout_marginStart="5dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/blog_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textSize="13sp"
            android:text="2017-03-04 11:22:21"/>
    </LinearLayout>

    <TextView
        android:id="@+id/blog_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/blog_top"
        android:textSize="13sp"
        android:lineSpacingExtra="4dp"
        android:textColor="#919191"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:text="2sodjfsjdfkljalkjdsflkjalkjfdkljalkjdfklfjakljfdkljlakjdfjdsfadfafd"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_view"/>
        <TextView
            android:id="@+id/blog_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123"
            android:textSize="12sp"/>

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_comment"/>
        <TextView
            android:id="@+id/blog_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123"
            android:textSize="12sp"/>

    </LinearLayout>

    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#B7B7B7"/>
</LinearLayout>