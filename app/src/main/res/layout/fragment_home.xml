<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.metide.cnblogs.fragment.HomeFragment">

    <android.support.design.widget.TabLayout
        android:id="@+id/fragment_home_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="16dp"
        app:tabSelectedTextColor="#ff7a61"
        app:tabIndicatorColor="@color/color_primary"
        app:tabIndicatorHeight="0dp"
        app:tabMode="scrollable"
        android:background="@android:color/white"
        app:tabGravity="center">
    </android.support.design.widget.TabLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#9999"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/fragment_home_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none">
    </android.support.v4.view.ViewPager>
</LinearLayout>
